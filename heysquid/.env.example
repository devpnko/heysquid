# heysquid 환경 설정
# 이 파일을 복사하여 .env 파일을 생성하세요: cp .env.example .env

# 텔레그램 봇 토큰 (BotFather에서 발급)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# 허용할 사용자 ID (쉼표로 구분하여 여러 명 가능)
TELEGRAM_ALLOWED_USERS=123456789

# 폴링 간격 (초) - 기본값: 10초
TELEGRAM_POLLING_INTERVAL=10

# X (Twitter) — Developer Portal에서 발급
# https://developer.x.com/en/portal/dashboard
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=

# Threads (Meta) — Meta Developer 앱 + Instagram Business 계정
# https://developers.facebook.com/docs/threads
THREADS_ACCESS_TOKEN=
THREADS_USER_ID=
