# heysquid 환경 설정
# 이 파일을 복사하여 .env 파일을 생성하세요: cp .env.example .env

# 텔레그램 봇 토큰 (BotFather에서 발급)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# 허용할 사용자 ID (쉼표로 구분하여 여러 명 가능)
TELEGRAM_ALLOWED_USERS=123456789

# 폴링 간격 (초) - 기본값: 10초
TELEGRAM_POLLING_INTERVAL=10

# X (Twitter) — Developer Portal에서 발급
# https://developer.x.com/en/portal/dashboard
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=

# Slack — Slack App (Socket Mode)
# 1. https://api.slack.com/apps에서 앱 생성
# 2. Socket Mode 활성화 → App-Level Token 발급
# 3. Bot Token Scopes: chat:write, files:read, files:write, reactions:write, users:read
# 4. Event Subscriptions: message.channels, message.im, app_mention
SLACK_BOT_TOKEN=xoxb-...
SLACK_APP_TOKEN=xapp-...
SLACK_ALLOWED_USERS=U01ABCDEF
SLACK_DEFAULT_CHANNEL=C01ABCDEF

# Discord — Discord Bot (Gateway)
# 1. https://discord.com/developers/applications에서 앱 생성
# 2. Bot 탭에서 토큰 발급
# 3. Privileged Gateway Intents: MESSAGE CONTENT INTENT 활성화 (필수!)
# 4. Bot Permissions: Send Messages, Attach Files, Read Message History, Add Reactions
DISCORD_BOT_TOKEN=
DISCORD_ALLOWED_USERS=123456789012345678
DISCORD_ALLOWED_CHANNELS=123456789012345678
DISCORD_DEFAULT_CHANNEL=123456789012345678

# Threads (Meta) — Meta Developer 앱 + Instagram Business 계정
# https://developers.facebook.com/docs/threads
THREADS_ACCESS_TOKEN=
THREADS_USER_ID=
