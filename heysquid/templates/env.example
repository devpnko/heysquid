# heysquid environment configuration
# Copy this file to create your .env: cp .env.example .env

# ── Telegram (required) ──────────────────────────────
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALLOWED_USERS=123456789
TELEGRAM_POLLING_INTERVAL=10

# ── Slack (optional — add tokens to enable) ──────────
# SLACK_BOT_TOKEN=xoxb-...
# SLACK_APP_TOKEN=xapp-...
# SLACK_ALLOWED_USERS=U01ABCDEF
# SLACK_DEFAULT_CHANNEL=C01ABCDEF

# ── Discord (optional — add token to enable) ─────────
# DISCORD_BOT_TOKEN=your_discord_bot_token
# DISCORD_ALLOWED_USERS=123456789012345678
# DISCORD_DEFAULT_CHANNEL=123456789012345678
